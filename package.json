{
  "name": "electron-vue2-share",
  "version": "1.0.0",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder",
    "preview": "vite preview"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.8.3",
    "vue": "^2.7.16"
  },
  "devDependencies": {
    "@vitejs/plugin-vue2": "^2.3.1",
    "electron": "^25.9.8",
    "electron-builder": "^24.9.1",
    "typescript": "^5.0.2",
    "vite": "^4.5.5",
    "vite-plugin-electron": "^0.15.4",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-template-compiler": "^2.7.16",
    "vue-tsc": "^1.8.27"
  },
  "build": {
    "appId": "com.example.electron-vue2-share",
    "productName": "ElectronVue2Share",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "YOUR-GITHUB-USERNAME",
        "repo": "YOUR-REPO-NAME"
      }
    ],
    "mac": {
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSCameraUsageDescription": "Please allow access to your camera",
        "NSMicrophoneUsageDescription": "Please allow access to your microphone",
        "NSLocationWhenInUseUsageDescription": "Please allow access to your location",
        "NSLocationAlwaysUsageDescription": "Please allow access to your location"
      }
    }
  }
}
